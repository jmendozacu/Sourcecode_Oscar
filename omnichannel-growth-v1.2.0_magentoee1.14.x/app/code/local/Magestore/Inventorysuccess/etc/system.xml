<config>
    <tabs>
        <magestore translate="label">
            <label>Magestore Extension</label>
            <sort_order>400</sort_order>
        </magestore>
    </tabs>
    <sections>
        <inventorysuccess translate="label" module="inventorysuccess">
            <class>separator-top</class>
            <label>Inventorysuccess</label>
            <tab>magestore</tab>
            <frontend_type>text</frontend_type>
            <sort_order>299</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <stock_control translate="label">
                    <label>Stock Control Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>    
                        <link_warehouse_store_view translate="label">
                            <label>Link warehouse to Magento front store view</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>0</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[
                                    Yes: that means you show stocks in a warehouse to a Magento front store view.<br/>
                                    No: that means all stocks will be shown in Magento front store view.
                                ]]>                                
                            </comment>
                        </link_warehouse_store_view>                            
                        <adjust_stock_change translate="label">
                            <label>Adjust Stock by entering the change qty</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment></comment>
                        </adjust_stock_change>
                    </fields>
                </stock_control>
            </groups>
        </inventorysuccess>
    </sections>
</config>