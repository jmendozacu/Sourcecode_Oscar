<config>
    <modules>
        <Magestore_Inventorysuccess>
            <version>2.1.4</version>
        </Magestore_Inventorysuccess>
    </modules>
    <frontend>
        <routers>
            <inventorysuccess>
                <use>standard</use>
                <args>
                    <module>Magestore_Inventorysuccess</module>
                    <frontName>inventorysuccess</frontName>
                </args>
            </inventorysuccess>
        </routers>
        <layout>
            <updates>
                <inventorysuccess>
                    <file>inventorysuccess.xml</file>
                </inventorysuccess>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Inventorysuccess>
                    <files>
                        <default>Magestore_Inventorysuccess.csv</default>
                    </files>
                </Magestore_Inventorysuccess>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Magestore_Inventorysuccess before="Mage_Adminhtml">Magestore_Inventorysuccess_Adminhtml</Magestore_Inventorysuccess>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <inventorysuccess>
                    <file>inventorysuccess/inventorysuccess.xml</file>
                </inventorysuccess>                
                <inventorysuccess_warehouse>
                    <file>inventorysuccess/warehouse.xml</file>
                </inventorysuccess_warehouse>
                <inventorysuccess_ajduststock>
                    <file>inventorysuccess/adjuststock.xml</file>
                </inventorysuccess_ajduststock>
                <inventorysuccess_stocktaking>
                    <file>inventorysuccess/stocktaking.xml</file>
                </inventorysuccess_stocktaking>
                <inventorysuccess_transferstock>
                    <file>inventorysuccess/transferstock.xml</file>
                </inventorysuccess_transferstock>
                <inventorysuccess_catalog>
                    <file>inventorysuccess/catalog.xml</file>
                </inventorysuccess_catalog>
                <inventorysuccess_lowstocknotification>
                    <file>inventorysuccess/lowstocknotification.xml</file>
                </inventorysuccess_lowstocknotification>
                <inventorysuccess_supplyneeds>
                    <file>inventorysuccess/supplyneeds.xml</file>
                </inventorysuccess_supplyneeds>
                <inventorysuccess_importexport>
                    <file>inventorysuccess/importexport.xml</file>
                </inventorysuccess_importexport>
                <inventorysuccess_sales>
                    <file>inventorysuccess/sales.xml</file>
                </inventorysuccess_sales>
                <inventorysuccess_localtion>
                    <file>inventorysuccess/localtion.xml</file>
                </inventorysuccess_localtion>
                <inventorysuccess_installation>
                    <file>inventorysuccess/installation.xml</file>
                </inventorysuccess_installation>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Inventorysuccess>
                    <files>
                        <default>Magestore_Inventorysuccess.csv</default>
                    </files>
                </Magestore_Inventorysuccess>
            </modules>
        </translate>
        <events>
            <catalog_product_save_after>
                <observers>
                    <inventorysuccess_observers>
                        <class>inventorysuccess/observer_catalog_productSaveAfter</class>
                        <method>execute</method>
                    </inventorysuccess_observers>
                </observers>
            </catalog_product_save_after>
            <catalog_product_save_before>
                <observers>
                    <inventorysuccess_observers>
                        <class>inventorysuccess/observer_catalog_productSaveBefore</class>
                        <method>execute</method>
                    </inventorysuccess_observers>
                </observers>
            </catalog_product_save_before>

            <admin_session_user_login_success>
                <observers>
                    <inventorysuccess_notification>
                        <class>inventorysuccess/lowStockNotification_observer</class>
                        <method>notification</method>
                    </inventorysuccess_notification>
                </observers>
            </admin_session_user_login_success>
            <controller_action_predispatch_adminhtml_inventorysuccess_lowstocknotification_notification_notify>
                <observers>
                    <inventorysuccess_notification>
                        <class>inventorysuccess/lowStockNotification_observer</class>
                        <method>redirect</method>
                    </inventorysuccess_notification>
                </observers>
            </controller_action_predispatch_adminhtml_inventorysuccess_lowstocknotification_notification_notify>
            <controller_action_predispatch_adminhtml_system_convert_gui_batchfinish>
                <observers>
                    <inventorysuccess_import_dataflow>
                        <class>inventorysuccess/dataflow_observer</class>
                        <method>updateDataWarehouseProduct</method>
                    </inventorysuccess_import_dataflow>
                </observers>
            </controller_action_predispatch_adminhtml_system_convert_gui_batchfinish>
            <webpos_location_edit_container>
                <observers>
                    <inventorysuccess_webpos_location_edit_container>
                        <class>inventorysuccess/observer_integration_webpos_locationPrepareContainer</class>
                        <method>execute</method>
                    </inventorysuccess_webpos_location_edit_container>
                </observers>
            </webpos_location_edit_container>
            <webpos_location_edit_form>
                <observers>
                    <inventorysuccess_webpos_location_edit_form>
                        <class>inventorysuccess/observer_integration_webpos_locationPrepareForm</class>
                        <method>execute</method>
                    </inventorysuccess_webpos_location_edit_form>
                </observers>
            </webpos_location_edit_form>
            <webpos_location_save_after>
                <observers>
                    <inventorysuccess_webpos_location_save_after>
                        <class>inventorysuccess/observer_integration_webpos_locationSaveAfter</class>
                        <method>execute</method>
                    </inventorysuccess_webpos_location_save_after>
                </observers>
            </webpos_location_save_after>
            <webpos_location_delete_after>
                <observers>
                    <inventorysuccess_webpos_location_delete_after>
                        <class>inventorysuccess/observer_integration_webpos_locationDeleteAfter</class>
                        <method>execute</method>
                    </inventorysuccess_webpos_location_delete_after>
                </observers>
            </webpos_location_delete_after>
            <controller_action_predispatch>
                <observers>
                    <inventorysuccess_adminhtml_controller_action_predispatch_start>
                        <class>inventorysuccess/observer_adminhtml_controllerActionPredispatch</class>
                        <method>execute</method>
                    </inventorysuccess_adminhtml_controller_action_predispatch_start>
                </observers>
            </controller_action_predispatch>
            <core_layout_block_create_after>
                <observers>
                    <inventorysuccess_core_block_abstract_to_html_before>
                        <class>inventorysuccess/observer_core_layoutBlockCreateAfter</class>
                        <method>execute</method>
                    </inventorysuccess_core_block_abstract_to_html_before>
                </observers>
            </core_layout_block_create_after>
            <core_block_abstract_to_html_after>
                <observers>
                    <inventorysuccess_core_block_abstract_to_html_after>
                        <class>inventorysuccess/observer_core_blockAbstractToHtmlAfter</class>
                        <method>execute</method>
                    </inventorysuccess_core_block_abstract_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
            <adminhtml_block_html_before>
                <observers>
                    <inventorysuccess_adminhtml_block_html_before>
                        <class>inventorysuccess/observer_adminhtml_blockHtmlBefore</class>
                        <method>execute</method>
                    </inventorysuccess_adminhtml_block_html_before>
                </observers>
            </adminhtml_block_html_before>
            <sales_order_grid_collection_load_before>
                <observers>
                    <inventorysuccess_adminhtml_order_grid_collection_load_before>
                        <class>inventorysuccess/observer_sales_order_grid_collectionLoadBefore</class>
                        <method>execute</method>
                    </inventorysuccess_adminhtml_order_grid_collection_load_before>
                </observers>
            </sales_order_grid_collection_load_before>
        </events>
    </adminhtml>
    <global>
        <models>
            <api2>
                <rewrite>
                    <acl_global>Magestore_Inventorysuccess_Model_Api2_Acl_Global</acl_global>
                    <server>Magestore_Inventorysuccess_Model_Api2_Server</server>
                    <acl_filter>Magestore_Inventorysuccess_Model_Api2_Acl_Filter</acl_filter>
                </rewrite>
            </api2>
            <inventorysuccess>
                <class>Magestore_Inventorysuccess_Model</class>
                <resourceModel>inventorysuccess_mysql4</resourceModel>
            </inventorysuccess>
            <inventorysuccess_mysql4>
                <class>Magestore_Inventorysuccess_Model_Mysql4</class>
                <entities>
                    <inventorysuccess>
                        <table>inventorysuccess</table>
                    </inventorysuccess>
                    <lowStockNotification_rule>
                        <table>os_lowstock_notification_rule</table>
                    </lowStockNotification_rule>
                    <lowStockNotification_rule_product>
                        <table>os_lowstock_notification_rule_product</table>
                    </lowStockNotification_rule_product>
                    <lowStockNotification_notification>
                        <table>os_lowstock_notification</table>
                    </lowStockNotification_notification>
                    <lowStockNotification_notification_product>
                        <table>os_lowstock_notification_product</table>
                    </lowStockNotification_notification_product>
                    <warehouse>
                        <table>os_warehouse</table>
                    </warehouse>
                    <warehouse_product>
                        <table>cataloginventory_stock_item</table>
                    </warehouse_product>                  
                    <warehouse_order_item>
                        <table>os_warehouse_order_item</table>
                    </warehouse_order_item>
                    <warehouse_shipment_item>
                        <table>os_warehouse_shipment_item</table>
                    </warehouse_shipment_item>
                    <warehouse_creditmemo_item>
                        <table>os_warehouse_creditmemo_item</table>
                    </warehouse_creditmemo_item>
                    <incrementid>
                        <table>os_increment_id</table>
                    </incrementid>
                    <transferstock>
                        <table>os_transferstock</table>
                    </transferstock>
                    <transferstock_product>
                        <table>os_transferstock_product</table>
                    </transferstock_product>
                    <transferstock_activity>
                        <table>os_transferstock_activity</table>
                    </transferstock_activity>
                    <transferstock_activity_product>
                        <table>os_transferstock_activity_product</table>
                    </transferstock_activity_product>
                    <adjuststock>
                        <table>os_adjuststock</table>
                    </adjuststock>
                    <adjuststock_product>
                        <table>os_adjuststock_product</table>
                    </adjuststock_product>
                    <stocktaking>
                        <table>os_stocktaking</table>
                    </stocktaking>
                    <stocktaking_product>
                        <table>os_stocktaking_product</table>
                    </stocktaking_product>
                    <incrementid>
                        <table>os_increment_id</table>
                    </incrementid>
                    <stockMovement>
                        <table>os_stock_movement</table>
                    </stockMovement>
                    <stockMovement_stockTransfer>
                        <table>os_stock_transfer</table>
                    </stockMovement_stockTransfer>
                    <permission>
                        <table>os_permission</table>
                    </permission>
                    <warehouseLocationMap>
                        <table>os_warehouse_location</table>
                    </warehouseLocationMap>
                    <warehouse_store>
                        <table>os_warehouse_store</table>
                    </warehouse_store>                    
                    <installation>
                        <table>os_installation</table>
                    </installation>
                </entities>
            </inventorysuccess_mysql4>
            <importexport>
                <rewrite>
                    <import_entity_product>Magestore_Inventorysuccess_Model_ImportExport_Rewrite_Import_Entity_Product</import_entity_product>
                </rewrite>
            </importexport>
            <catalog>
                <rewrite>
                    <convert_adapter_product>Magestore_Inventorysuccess_Model_Dataflow_Catalog_Rewrite_Convert_Adapter_Product</convert_adapter_product>
                </rewrite>
            </catalog>
            <cataloginventory>
                <rewrite>
                    <stock>Magestore_Inventorysuccess_Model_Rewrite_CataloginventoryStock</stock>
                </rewrite>
            </cataloginventory>
            <cataloginventory_resource>
                <rewrite>
                    <stock>Magestore_Inventorysuccess_Model_Rewrite_CataloginventoryResourceStock</stock>
                    <stock_status>Magestore_Inventorysuccess_Model_Rewrite_CataloginventoryResourceStockStatus</stock_status>
                </rewrite>
            </cataloginventory_resource>  
            <!-- filter composite products in Magento store by warehouse --> 
            <catalog_resource>
                <rewrite>
                    <product_type_configurable_product_collection>Magestore_Inventorysuccess_Model_Rewrite_ProductTypeConfigurableCollection</product_type_configurable_product_collection>
                    <product_link_product_collection>Magestore_Inventorysuccess_Model_Rewrite_ProductLinkProductCollection</product_link_product_collection>
                    <product_indexer_price_default>Magestore_Inventorysuccess_Model_Rewrite_ProductIndexerPriceDefault</product_indexer_price_default>
                </rewrite>
            </catalog_resource>  
            <bundle_resource>
                <rewrite>
                    <selection_collection>Magestore_Inventorysuccess_Model_Rewrite_BundleSelectionCollection</selection_collection>
                </rewrite>
            </bundle_resource>
            <!-- end of filter composite products in Magento store by warehouse -->                                                                                                                           
        </models>
        <resources>
            <inventorysuccess_setup>
                <setup>
                    <module>Magestore_Inventorysuccess</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </inventorysuccess_setup>
            <inventorysuccess_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </inventorysuccess_write>
            <inventorysuccess_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </inventorysuccess_read>
        </resources>
        <blocks>
            <inventorysuccess>
                <class>Magestore_Inventorysuccess_Block</class>
            </inventorysuccess>
            <adminhtml>
                <rewrite>
                    <system_convert_gui_edit_tab_wizard>Magestore_Inventorysuccess_Block_Adminhtml_Dataflow_Catalog_Rewrite_Convert_Gui_Edit_Tab_Wizard</system_convert_gui_edit_tab_wizard>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <inventorysuccess>
                <class>Magestore_Inventorysuccess_Helper</class>
            </inventorysuccess>
        </helpers>

        <template>
            <email>
                <email_send_notification_template translate="label" module="inventorysuccess">
                    <label>Send notifcation to store owner</label>
                    <file>inventorysuccess/lowstocknotification/notification/send_email_notification.html</file>
                    <type>html</type>
                </email_send_notification_template>
                <transferstock_create translate="label" module="inventorysuccess">
                    <label>Notify new transfer stock is created</label>
                    <file>inventorysuccess/transferstock/transferstock_create.html</file>
                    <type>html</type>
                </transferstock_create>
                <transferstock_delivery translate="label" module="inventorysuccess">
                    <label>Notify new delivery for a transfer stock is created</label>
                    <file>inventorysuccess/transferstock/transferstock_delivery.html</file>
                    <type>html</type>
                </transferstock_delivery>
                <transferstock_receiving translate="label" module="inventorysuccess">
                    <label>Notify new receiving for a transfer stock is created</label>
                    <file>inventorysuccess/transferstock/transferstock_receiving.html</file>
                    <type>html</type>
                </transferstock_receiving>
                <transferstock_direct_transfer translate="label" module="inventorysuccess">
                    <label>Notify new direct transfer for a transfer stock is created</label>
                    <file>inventorysuccess/transferstock/transferstock_direct_transfer.html</file>
                    <type>html</type>
                </transferstock_direct_transfer>
                <transferstock_email_new translate="label" module="inventorysuccess">
                    <label>Notify new transfer stock is created</label>
                    <file>inventorysuccess/transferstock/transferstock_email_new.html</file>
                    <type>html</type>
                </transferstock_email_new>
                <transferstock_return translate="label" module="inventorysuccess">
                    <label>Notify new transfer stock is created</label>
                    <file>inventorysuccess/transferstock/transferstock_return.html</file>
                    <type>html</type>
                </transferstock_return>
            </email>
        </template>
