                <observers>
                    <inventorysuccess_webpos_catalog_product_collection_filter>
                        <class>inventorysuccess/observer_integration_webpos_productCollectionFilter</class>
                        <method>execute</method>
                    </inventorysuccess_webpos_catalog_product_collection_filter>
                </observers>                
            </webpos_catalog_product_collection_filter>
