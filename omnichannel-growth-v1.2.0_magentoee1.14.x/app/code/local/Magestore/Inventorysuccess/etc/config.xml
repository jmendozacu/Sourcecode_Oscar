                <observers>
                    <inventorysuccess_stockchange_adjust_stock_after>
                        <class>inventorysuccess/observer_stockChange_AdjustStockAfter</class>
                        <method>execute</method>
                    </inventorysuccess_stockchange_adjust_stock_after>
                </observers>
            </stockchange_adjust_stock_after>
            <stockchange_issue_stock_after>
                <observers>
                    <inventorysuccess_stockchange_issue_stock_after>
                        <class>inventorysuccess/observer_stockChange_issueStockAfter</class>
                        <method>execute</method>
                    </inventorysuccess_stockchange_issue_stock_after>
                </observers>
            </stockchange_issue_stock_after>
            <stockchange_receive_stock_after>
                <observers>
                    <inventorysuccess_stockchange_receive_stock_after>
                        <class>inventorysuccess/observer_stockChange_receiveStockAfter</class>
                        <method>execute</method>
                    </inventorysuccess_stockchange_receive_stock_after>
                </observers>
            </stockchange_receive_stock_after>
            <sales_order_item_save_before>
                <observers>
                    <inventorysuccess_sales_order_item_save_before>
                        <class>inventorysuccess/observer_sales_orderItemSaveBefore</class>
                        <method>execute</method>
                    </inventorysuccess_sales_order_item_save_before>
                </observers>
            </sales_order_item_save_before>
            <sales_order_item_save_after>
                <observers>
                    <inventorysuccess_sales_order_item_save_after>
                        <class>inventorysuccess/observer_sales_orderItemSaveAfter</class>
                        <method>execute</method>
                    </inventorysuccess_sales_order_item_save_after>
                </observers>
            </sales_order_item_save_after>
            <sales_shipment_item_save_after>
                <observers>
                    <inventorysuccess_sales_shipment_item_save_after>
