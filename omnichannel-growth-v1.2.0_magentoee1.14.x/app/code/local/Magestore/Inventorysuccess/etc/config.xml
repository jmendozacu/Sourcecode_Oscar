                        <method>execute</method>
                    </inventorysuccess_catalog_product_collection_apply_limitations_after>
                </observers>                
            </catalog_product_collection_apply_limitations_after>
            <sales_order_save_before>
                <observers>
                    <inventorysuccess_sales_order_save_before>
                        <class>inventorysuccess/observer_sales_orderSaveBefore</class>
                        <method>execute</method>
                    </inventorysuccess_sales_order_save_before>
                </observers>
            </sales_order_save_before>
        </events>
    </global>
    <default>
        <lowstocknotification>
            <notification>
                <send_email_notification>email_send_notification_template</send_email_notification>
            </notification>
        </lowstocknotification>
        <inventorysuccess>
            <stockmovement>
                <activity>
                    <adjustment>inventorysuccess/service_stockMovement_activity_adjustmentService</adjustment>
                    <sales_shipment>inventorysuccess/service_stockMovement_activity_salesShipmentService</sales_shipment>
                    <sales_refund>inventorysuccess/service_stockMovement_activity_salesRefundService</sales_refund>
                    <transferstock>inventorysuccess/service_stockMovement_activity_transferService</transferstock>
                    <api_inventory>inventorysuccess/service_stockMovement_activity_apiInventoryService</api_inventory>
                </activity>
            </stockmovement>
            <stock_control>
                <link_warehouse_store_view>0</link_warehouse_store_view>
                <adjust_stock_change>0</adjust_stock_change>
            </stock_control>
        </inventorysuccess>
    </default>
    <crontab>
        <jobs>
            <inventorysuccess_lowstocknotification>
                <schedule>
                    <cron_expr>0 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>inventorysuccess/lowStockNotification_observer::notification</model>
                </run>
            </inventorysuccess_lowstocknotification>
        </jobs>
    </crontab>
</config>