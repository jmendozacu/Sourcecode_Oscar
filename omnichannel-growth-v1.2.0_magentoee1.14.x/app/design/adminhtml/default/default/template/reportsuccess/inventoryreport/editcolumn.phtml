<div id = "report-edit-column" class="report-edit-column" inactive dofilter>
    <?php $removecolumn = Mage::getModel('reportsuccess/editcolumns')->getCollection()->addFieldToFilter('grid',$this->getName())
        ->getFirstItem();
    if($removecolumn){
        $columns = $removecolumn->getValue();
        $columns = explode(',',$columns);
        foreach($columns as $value){
            $column = explode(':',$value);
            if ($column[0] === 'null')
                continue;

            if($column[1] == 0){
                ?>
                <input type="checkbox" name="editcolumns" value="<?php echo trim($column[0]) ?>"><span><?php echo $this->_mapping_field_name_column[trim($column[0])] ?></span><br>
                <?php
            }else {
                ?>
                <input checked type="checkbox" name="editcolumns" value="<?php echo trim($column[0]) ?>"><span><?php echo $this->_mapping_field_name_column[trim($column[0])] ?></span><br>
                <?php
            }
        }
    }
    ?>
    <div class="button_edit_columns">
        <button id="cancel_edit_columns">Cancel</button>
    </div>
    <div class="button_edit_columns">
        <button id="apply_edit_columns">Apply</button>
    </div>
</div>

