
<?php $_item = $this->getItem() ?>
<tr class="border">
    <td><?php echo $this->getColumnHtml($_item, 'name') ?></td>
    <td><?php echo $this->getColumnHtml($_item, 'qty') ?></td>
    <td class="col-qty-in-warehouse a-center" id = "item_in_warehouse"><span id="qty_in_warehouse[<?php echo $_item->getOrderItemId() ?>]"></span></td>
